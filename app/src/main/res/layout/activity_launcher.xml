<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainScreenBackground"
    tools:context=".LauncherActivity">

    <ImageView
        android:id="@+id/around_the_world_text"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_around_the_world_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="10dp"
        android:src="@drawable/ic_earth"
        android:layout_below="@+id/around_the_world_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="Ormovški oboževalci oken ©"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>